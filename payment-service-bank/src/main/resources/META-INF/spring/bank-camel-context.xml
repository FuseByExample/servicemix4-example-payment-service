<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       ">

    <bean class="org.apache.activemq.camel.component.ActiveMQComponent" id="activemq">
        <property name="brokerURL" value="tcp://localhost:61616"/>
    </bean>

    <bean class="com.fusesource.examples.payment_service.impl.PaymentImpl" id="paymentServiceSE" init-method="init"/>

    <camelContext id="bankContext" xmlns="http://camel.apache.org/schema/spring" trace="false">
        <route id="bankRoute">
            <from uri="activemq:queue:payment-service-transfer"/>
            <to uri="log:payment-service-bank"/>
            <unmarshal>
                <jaxb contextPath="com.fusesource.examples.payment_service.types"/>
            </unmarshal>
            <bean ref="paymentServiceSE"/>
            <marshal>
                <jaxb contextPath="com.fusesource.examples.payment_service.types"/>
            </marshal>
        </route>
    </camelContext>

</beans>